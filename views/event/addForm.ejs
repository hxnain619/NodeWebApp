<div class="row">
<div class="card col s12 m12 l12" style="padding : 20px; ">
    <% if(flashes.length > 0) {%>
    <span>Flash</span>
    <code><%- flashes.toString() %></code>

    <% } %>
        <h4 class="center">Add Event</h4>
        <form class='col s12 m12 l12' id="addeventForm" name="addevent" action="/event/add" method="POST"
            enctype="multipart/form-data">
            <label for="exampleInputEmail1">Title</label>
            <input type="text" class="form-control" id="exampleInputtitle1" required name="title"
                aria-describedby="titleHelp" placeholder="Enter Title">
            <div class="file-field input-field">
                <div class="btn btn-large btn-primary pop-btn">
                    <span>Photos</span>
                    <input type="file" name="photos" id="photos" multiple accept="image/gif, image/png, image/jpeg">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" readonly placeholder="Uplaod Photos">
                </div>
            </div>
            <div class="row">
                <div class="col l6">
                    <label for="time">Time</label>
                    <input placeholder="eg. 10pm" type="time" name="time" id="time" min="0:01" />
                </div>
                <div class="col l6">
                    <label for="date">Date</label>
                    <input type="date" name="date" id="date" />
                </div>
            </div>
            <label for="address">Address</label>
            <input type="text" class="form-control" name="address" required id="address"
                placeholder="Type the location" />
           
            <div class="row">
                <div class="col l6">
                    <label for="lat">Lattitude</label>
                    <input type="number" class="form-control" name="coordinates0" required readonly id="lat" />
                </div>
                <div class="col l6">
                    <label for="lng">Longitude</label>
                    <input type="number" class="form-control" name="coordinates1" required readonly id="lng" />
                </div>
            </div>
            <br />
            <label for="desc">Description</label>
            <textarea type="text" style="outline: none" class="form-control" name="desc" id="desc" placeholder="Description"></textarea>

            <button type="submit" class="btn btn-large btn-primary pop-btn col s12 m12 l12">Submit</button>
        </form>
    </div>
</div>